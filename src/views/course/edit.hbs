<div class="mt-5">
  <h2>Sửa khóa học</h2>
  <form method="POST" action="/course/{{id}}?_method=PUT">
  <div class="form-group">
    <label>Name</label>
    <input type="text" value="{{name}}" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea name="description" class="form-control">{{description}}</textarea>
  </div>
  <div class="form-group">
    <label>Video Id</label>
    <input type="text" value="{{videoId}}" name="videoId" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Lưu khóa học</button>
</form>
</div>