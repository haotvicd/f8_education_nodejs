<div class="mt-5">
  <h2>Khóa học của tôi</h2>
  <a href="/me/trash/courses">Thùng rác ({{deletedCount}})</a>

  <div class="d-flex align-items-center">
    <div class="form-check">
      <input type="checkbox" class="form-check-input checkboxAll" id="exampleCheck1">
      <label class="form-check-label" for="exampleCheck1">Chọn tất cả</label>
    </div>
    <select class="form-control form-control-sm select-action">
      <option>-- Hành động --</option>
      <option>Xóa</option>
    </select>
    <button class="btn btn-primary btn-sm disabled btnSubmitAction">Thực hiện</button>
  </div>

  <table class="table mt-3">
    <thead>
      <tr>
        <th></th>
        <th scope="col">#</th>
        <th scope="col">Tên khóa học</th>
        <th scope="col">Mô tả</th>
        <th scope="col" colspan="2">Ngày tạo</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <td>
          <div class="form-check">
            <input type="checkbox" class="form-check-input checkboxItem" value="{{_id}}">
          </div>
        </td>
        <th scope="row">{{inc @index}}</th>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td>{{createdAt}}</td>
        <td>
          <a href="/course/edit/{{_id}}" class="btn btn-link">Sửa</a>
          <a href="" data-id="{{_id}}" class="btn btn-link" data-toggle="modal" data-target="#delModal">Xóa</a>
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="4"><p class="text-center">Chưa có khóa học nào. <a href="/course/create/">Tạo khóa học ngay</a></p></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Modal -->
<div class="modal fade" id="delModal" tabindex="-1" role="dialog" aria-labelledby="delModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="delModalLabel">Xóa khóa học ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa khóa học này ?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-danger" id="btnDeleteCourse">Xóa bỏ</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-form" method="POST"></form>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var courseId;

    $('#delModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget)
      courseId = button.data('id')
    })

    $('#btnDeleteCourse').on('click', function() {
      const deleteForm = document.forms['delete-form']
      deleteForm.action = '/course/' + courseId + '?_method=DELETE'
      deleteForm.submit()
    })

    $('.checkboxAll').click(function () {
      $('.checkboxItem').prop('checked', this.checked);
      if (this.checked) {
        $('.btnSubmitAction').removeClass('disabled')
      } else {
        $('.btnSubmitAction').addClass('disabled')
      }
    });

    $('.checkboxItem').change(function () {
      var check = ($('.checkboxItem').filter(":checked").length == $('.checkboxItem').length);
      $('.checkboxAll').prop("checked", check);

      if ($('.checkboxItem').filter(":checked").length > 0) {
        $('.btnSubmitAction').removeClass('disabled')
      } else {
        $('.btnSubmitAction').addClass('disabled')
      }
    });

    $('.btnSubmitAction').on('click', function(e) {
      e.preventDefault()
      console.log('submit')
    })

  })
</script>